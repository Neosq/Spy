local mobileToggle = Instance.new("ScreenGui")
mobileToggle.Name = "MobileToggle"
mobileToggle.ResetOnSpawn = false
mobileToggle.Parent = CoreGui

local circleBtn = Instance.new("ImageButton")
circleBtn.Position = UDim2.new(0.5, -22, 0.35, -22) 
circleBtn.Position = UDim2.new(0.92, -22, 0.88, -22)
circleBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 47)
circleBtn.BackgroundTransparency = 0.4
circleBtn.Image = "rbxassetid://83399654688148"
circleBtn.ZIndex = 10000
circleBtn.Parent = mobileToggle

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(1)
corner.Parent = circleBtn

local dragging, dragStart, startPos
circleBtn.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = circleBtn.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - dragStart
        circleBtn.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

circleBtn.Activated:Connect(function()
    if Background then Background.Visible = not Background.Visible end
end)

local winDragging, winStart, winPos
TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        winDragging = true
        winStart = input.Position
        winPos = Background.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then winDragging = false end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if winDragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - winStart
        if Background then
            Background.Position = UDim2.new(winPos.X.Scale, winPos.X.Offset + delta.X, winPos.Y.Scale, winPos.Y.Offset + delta.Y)
        end
    end
end)

if Background then Background.Visible = false end
